<Window x:Class="ExternalModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExternalModManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#1f2d3b">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <StackPanel Margin="10">
                <Label Foreground="LightGray" FontWeight="Bold">MAPS</Label>
                <Button Margin="0 5 0 0">Installed</Button>
                <Button Margin="0 5 0 0">Browse</Button>
                
                <Label Margin="0 15 0 0" Foreground="LightGray" FontWeight="Bold">MODS</Label>
                <Button Margin="0 5 0 0">Installed</Button>
                <Button Margin="0 5 0 0">Browse</Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Frame Source="Pages/ModPage.xaml"></Frame>
        </Grid>
    </Grid>
</Window>
